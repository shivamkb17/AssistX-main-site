---
const footerLinks = {
  Product: [
    { text: 'Features', href: '#' },
    { text: 'Solutions', href: '#' },
    { text: 'Pricing', href: '#' },
    { text: 'Updates', href: '#' }
  ],
  Company: [
    { text: 'About', href: '#' },
    { text: 'Careers', href: '#' },
    { text: 'Blog', href: '#' },
    { text: 'Contact', href: '#' }
  ],
  Resources: [
    { text: 'Documentation', href: '#' },
    { text: 'Help Center', href: '#' },
    { text: 'Community', href: '#' },
    { text: 'API Reference', href: '#' }
  ],
  Legal: [
    { text: 'Privacy', href: '#' },
    { text: 'Terms', href: '#' },
    { text: 'Security', href: '#' }
  ]
};
---
<footer class="bg-gray-900 text-gray-300 py-12 px-4">
  <div class="max-w-7xl mx-auto">
    <div class="grid grid-cols-2 md:grid-cols-5 gap-8">
      <div class="col-span-2">
        <a href="/" class="text-2xl font-bold text-white">AssistX</a>
        <p class="mt-4 text-gray-400">
          Empowering businesses with intelligent omnichannel support solutions.
        </p>
        <div class="mt-4 flex space-x-4">
          <a href="#" class="text-gray-400 hover:text-white">
            <span class="sr-only">Twitter</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"/>
            </svg>
          </a>
          <a href="#" class="text-gray-400 hover:text-white">
            <span class="sr-only">LinkedIn</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
        </div>
      </div>

      {Object.entries(footerLinks).map(([title, links]) => (
        <div>
          <h3 class="font-semibold text-white mb-4">{title}</h3>
          <ul class="space-y-2">
            {links.map(link => (
              <li>
                <a href={link.href} class="text-gray-400 hover:text-white transition-colors">
                  {link.text}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <div class="mt-12 pt-8 border-t border-gray-800 text-center text-gray-400">
      <p>&copy; {new Date().getFullYear()} AssistX. All rights reserved.</p>
    </div>
  </div>
</footer>