---
const features = [
  "Omnichannel Support",
  "Real-time Analytics",
  "Custom Automation",
  "Team Collaboration",
  "API Access",
  "White-label Options"
];

const competitors = [
  {
    name: "AssistX",
    features: features.map(() => true)
  },
  {
    name: "Competitor A",
    features: [true, true, false, true, false, false]
  },
  {
    name: "Competitor B",
    features: [true, false, true, false, true, false]
  }
];
---
<section class="py-20 px-4">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-3xl font-bold text-center mb-12">How We Compare</h2>
    <div class="overflow-x-auto">
      <table class="w-full border-collapse">
        <thead>
          <tr>
            <th class="text-left p-4 bg-gray-50">Features</th>
            {competitors.map(competitor => (
              <th class="text-center p-4 bg-gray-50">{competitor.name}</th>
            ))}
          </tr>
        </thead>
        <tbody>
          {features.map((feature, featureIndex) => (
            <tr class="border-t">
              <td class="p-4">{feature}</td>
              {competitors.map(competitor => (
                <td class="text-center p-4">
                  {competitor.features[featureIndex] ? 
                    <span class="text-green-500">✓</span> : 
                    <span class="text-red-500">×</span>
                  }
                </td>
              ))}
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </div>
</section>