---
interface Props {
  question: string;
  answer: string;
}

const { question, answer } = Astro.props;
---
<div class="bg-white rounded-xl shadow-sm">
  <button class="faq-button w-full text-left p-6 focus:outline-none">
    <div class="flex justify-between items-center">
      <h3 class="text-xl font-semibold pr-8">{question}</h3>
      <svg class="w-6 h-6 transform transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
      </svg>
    </div>
    <p class="faq-answer mt-4 text-gray-600 hidden">{answer}</p>
  </button>
</div>