---
import { countries } from '../utils/countries';

const integrationOptions = [
  'E-commerce Platform',
  'CRM System',
  'Help Desk Software',
  'Marketing Automation',
  'Custom Integration'
];
---
<section id="request-demo" class="py-20 px-4 bg-gradient-to-br from-white to-indigo-50">
  <div class="max-w-4xl mx-auto">
    <div class="text-center mb-12">
      <span class="inline-block px-4 py-1.5 bg-indigo-100 text-primary rounded-full text-sm font-medium mb-4">
        Book a Demo
      </span>
      <h2 class="text-3xl md:text-4xl font-bold mb-4">See AssistX in Action</h2>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        Schedule a personalized demo with our product experts and discover how AssistX can transform your customer support
      </p>
    </div>

    <form id="demo-form" class="bg-white p-8 md:p-10 rounded-2xl shadow-xl">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full px-4 py-3 rounded-lg border-gray-300 bg-gray-50 focus:ring-2 focus:ring-primary focus:border-primary transition-colors"
            placeholder="John Doe"
          />
        </div>
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Work Email</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full px-4 py-3 rounded-lg border-gray-300 bg-gray-50 focus:ring-2 focus:ring-primary focus:border-primary transition-colors"
            placeholder="john@company.com"
          />
        </div>
        <div>
          <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
          <div class="flex">
            <div class="relative">
              <select 
                id="country_code" 
                name="country_code" 
                class="w-[80px] px-2 py-3 rounded-l-lg border-r-0 border-gray-300 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-primary focus:border-primary appearance-none pr-6 transition-colors text-sm"
              >
                {countries.map(country => (
                  <option value={country.code} data-country-code={country.iso}>
                    {country.flag} {country.code}
                  </option>
                ))}
              </select>
              <div class="absolute inset-y-0 right-0 flex items-center px-1.5 pointer-events-none">
                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </div>
            </div>
            <input
              type="tel"
              id="phone"
              name="phone"
              required
              placeholder="Phone number"
              class="flex-1 px-4 py-3 rounded-r-lg border-gray-300 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-primary focus:border-primary transition-colors"
            />
          </div>
        </div>
        <div>
          <label for="business" class="block text-sm font-medium text-gray-700 mb-1">Company Name</label>
          <input
            type="text"
            id="business"
            name="business"
            required
            class="w-full px-4 py-3 rounded-lg border-gray-300 bg-gray-50 focus:ring-2 focus:ring-primary focus:border-primary transition-colors"
            placeholder="Your Company"
          />
        </div>
        <div>
          <label for="integration" class="block text-sm font-medium text-gray-700 mb-1">Integration Type</label>
          <select
            id="integration"
            name="integration"
            required
            class="w-full px-4 py-3 rounded-lg border-gray-300 bg-gray-50 focus:ring-2 focus:ring-primary focus:border-primary transition-colors"
          >
            <option value="">Select Integration Type</option>
            {integrationOptions.map(option => (
              <option value={option}>{option}</option>
            ))}
          </select>
        </div>
        <div>
          <label for="demo_date" class="block text-sm font-medium text-gray-700 mb-1">Preferred Demo Date</label>
          <input
            type="date"
            id="demo_date"
            name="demo_date"
            required
            min={new Date().toISOString().split('T')[0]}
            class="w-full px-4 py-3 rounded-lg border-gray-300 bg-gray-50 focus:ring-2 focus:ring-primary focus:border-primary transition-colors"
          />
        </div>
      </div>

      <div class="flex flex-col items-center space-y-4">
        <button
          type="submit"
          class="w-full md:w-auto px-8 py-4 bg-primary text-white font-semibold rounded-lg hover:bg-indigo-600 transform hover:scale-105 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary"
        >
          Schedule Demo
        </button>
        <p class="text-sm text-gray-500 flex items-center">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
          </svg>
          Your information is secure and encrypted
        </p>
      </div>
    </form>

    <div class="mt-12 flex flex-col sm:flex-row items-center justify-center gap-8 sm:gap-16">
      <div class="flex items-center gap-3">
        <div class="w-12 h-12 rounded-full bg-indigo-50 flex items-center justify-center">
          <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <span class="text-base sm:text-lg text-gray-700 font-medium">30-minute demo</span>
      </div>

      <div class="flex items-center gap-3">
        <div class="w-12 h-12 rounded-full bg-indigo-50 flex items-center justify-center">
          <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
        </div>
        <span class="text-base sm:text-lg text-gray-700 font-medium">Live Q&A included</span>
      </div>

      <div class="flex items-center gap-3">
        <div class="w-12 h-12 rounded-full bg-indigo-50 flex items-center justify-center">
          <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <span class="text-base sm:text-lg text-gray-700 font-medium">No commitment required</span>
      </div>
    </div>
  </div>
</section>