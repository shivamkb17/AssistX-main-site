---
const menuItems = [
  { text: 'Features', href: '/product' },
  { text: 'Solutions', href: '#solutions' },
  { text: 'Pricing', href: '#pricing' },
  { text: 'Resources', href: '#resources' }
];
---
<header class="fixed w-full bg-white/95 backdrop-blur-sm shadow-sm z-50">
  <nav class="max-w-7xl mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="text-2xl font-bold text-primary">AssistX</a>
      
      <div class="hidden md:flex items-center space-x-8">
        {menuItems.map(item => (
          <a href={item.href} class="text-gray-600 hover:text-primary transition-colors">
            {item.text}
          </a>
        ))}
      </div>

      <div class="hidden md:flex items-center space-x-4">
        <a href="/login" class="text-gray-600 hover:text-primary">Login</a>
        <a href="/signup" class="bg-primary text-white px-4 py-2 rounded-lg hover:bg-indigo-600 transition-colors">
          Sign Up
        </a>
      </div>

      <button class="md:hidden text-gray-600 hover:text-primary">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </nav>
</header>