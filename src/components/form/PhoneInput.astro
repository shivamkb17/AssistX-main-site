---
import { countries } from '../../utils/countries';
---
<div class="space-y-2">
  <label for="phone" class="block text-sm font-semibold text-gray-700">Contact Number</label>
  <div class="flex">
    <div class="relative">
      <select 
        id="country_code" 
        name="country_code" 
        class="w-[120px] px-4 py-3 rounded-l-lg border-r-0 border-gray-300 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-primary focus:border-primary appearance-none pr-8 transition-colors"
      >
        {countries.map(country => (
          <option value={country.code} data-country-code={country.iso}>
            {country.flag} {country.code}
          </option>
        ))}
      </select>
      <div class="absolute inset-y-0 right-0 flex items-center px-2 pointer-events-none">
        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </div>
    </div>
    <input
      type="tel"
      id="phone"
      name="phone"
      required
      placeholder="Phone number"
      class="flex-1 px-4 py-3 rounded-r-lg border-gray-300 bg-gray-50 focus:bg-white focus:ring-2 focus:ring-primary focus:border-primary transition-colors"
    />
  </div>
</div>

<script>
async function getUserCountry() {
  try {
    const response = await fetch('https://ipapi.co/json/');
    const data = await response.json();
    return data.country_code;
  } catch (error) {
    console.error('Error fetching country:', error);
    return navigator.language.split('-')[1] || 'US';
  }
}

async function setUserCountry() {
  const countryCode = await getUserCountry();
  const countrySelect = document.getElementById('country_code') as HTMLSelectElement;
  
  if (countrySelect) {
    const options = countrySelect.options;
    for (let i = 0; i < options.length; i++) {
      const option = options[i];
      if (option.getAttribute('data-country-code') === countryCode) {
        option.selected = true;
        break;
      }
    }
  }
}

setUserCountry();
</script>